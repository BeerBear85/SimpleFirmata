<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bear_vision.simplefirmata.MainActivity">

    <EditText
        android:id="@+id/servo_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/LED_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        tools:text="123" />

    <Button
        android:id="@+id/servo_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:onClick="sendServoCommand"
        android:text="@string/servo_send"
        app:layout_constraintBaseline_toBaselineOf="@+id/servo_order_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/servo_order_number" />

    <ToggleButton
        android:id="@+id/LED_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:checked="false"
        android:onClick="sendLEDCommand"
        android:text="ToggleButton"
        android:textOff="@string/LED_off"
        android:textOn="@string/LED_on"
        app:layout_constraintBaseline_toBaselineOf="@+id/LED_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:clickable="false" />

    <TextView
        android:id="@+id/LED_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="146dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="32dp"
        android:text="@string/LED_text"
        app:layout_constraintEnd_toStartOf="@+id/LED_toggle_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servo_order_number" />

</android.support.constraint.ConstraintLayout>
